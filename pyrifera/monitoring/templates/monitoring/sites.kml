<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2"
    xmlns:gx="http://www.google.com/kml/ext/2.2">
    <Document>
    	<name>{{project.name}} Survey Sites</name>
        {{project.styles|safe}}
        {% include "monitoring/default_site_style.kml" %}
    {% for site in project.sites.with_extras %}
        <Placemark>
            <name>{{site.name}}</name>
            <styleUrl>{{site.style_url}}</styleUrl>
            <description><![CDATA[
                <table width="300" height="60" class="popup">
                    <h3><font color="#0F244A">{{site.name}}</font></h3>
                    <p class="project"><img class="logo" src="{{MEDIA_URL}}kfm/logo_small.png"/>A {{site.project.name}} Site</p>
                    <p class="dates">Sampled {{site.earliest}}-{{site.latest}}</p>
                    {# <h4>sampled here</h4> #}
                    {# <ul> #}
                    {#     {% for protocol in site.protocols.all %} #}
                    {#         <li>{{protocol.name}}</li> #}
                    {#     {% endfor %} #}
                    {# </ul> #}
                    {# <p class="videos">{{site.videos.count}} videos</p> #}
                    <td align="right"><a align="right" href="{% url monitoring.views.site site.pk %}" rel="sidebar">More Information</a></td>
                </table>
                ]]>
            </description>
            {{site.point.kml|safe}}
            <ExtendedData>
                <Data name="code">
                    <value>{{site.code}}</value>
                </Data>
                <Data name="project">
                    <value>{{site.project.name}}</value>
                </Data>
            </ExtendedData>
        </Placemark>
    {% endfor %}
    </Document>
</kml>